<Window x:Class="UPprog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UPprog"
        mc:Ignorable="d"
        Title="Пиши-стирай" MinHeight="450" MinWidth="800" Icon="/Resourses/logo.png">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
                <Image Source="/Resourses/logo.png" Height="70"/>
                <TextBlock Text="ООО «Пиши-стирай»" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
            </StackPanel>
            <Frame x:Name="mainFrame" Grid.Row="1" NavigationUIVisibility="Hidden">
            </Frame>
        </Grid>
    </Grid>
</Window>
